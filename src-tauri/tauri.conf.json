{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Met het Mes op Tafel",
  "version": "1.0.0",
  "identifier": "nl.yellowspot.mhmot",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Met het Mes op Tafel",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Yellowspot BV",
    "copyright": "Copyright Â© 2025 Yellowspot BV",
    "category": "Game",
    "shortDescription": "Nederlandse kennisquiz met poker-elementen",
    "longDescription": "Met het Mes op Tafel is een Nederlandse kennisquiz gecombineerd met poker-elementen. Spelers beantwoorden vragen en zetten strategisch in op hun antwoorden."
  }
}
